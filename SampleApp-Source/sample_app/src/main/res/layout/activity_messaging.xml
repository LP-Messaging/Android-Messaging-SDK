<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/auth_code_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Auth Code:">

                <EditText
                    android:id="@+id/auth_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/badge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Badge" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/public_key_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Public Key:">

            <EditText
                android:id="@+id/public_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/auth_type_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Auth type:" />

            <Spinner
                android:id="@+id/auth_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/auth_type_title" />

        </RelativeLayout>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:rowCount="14">

            <Button
                android:id="@+id/button_start_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_activity"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_row="0" />

            <Button
                android:id="@+id/button_start_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_fragment"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_row="0" />

            <CheckBox
                android:id="@+id/check_box_toasts"
                android:checked="false"
                android:gravity="center"
                android:text="Show callbacks toasts"
                app:layout_column="0"
                app:layout_row="1" />

            <CheckBox
                android:id="@+id/check_box_read_only"
                android:checked="false"
                android:gravity="center"
                android:text="Read Only mode"
                app:layout_column="1"
                app:layout_row="1" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/first_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name:"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill"
                app:layout_row="2">

                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/last_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name:"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill"
                app:layout_row="3">

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone_number_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number:"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill"
                app:layout_row="4">

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Campaign ID"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill"
                app:layout_row="5">

                <EditText
                    android:id="@+id/campaign_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Engagement ID"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill"
                app:layout_row="6">

                <EditText
                    android:id="@+id/engagement_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Session ID"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill"
                app:layout_row="7">

                <EditText
                    android:id="@+id/session_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Visitor ID"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill"
                app:layout_row="8">

                <EditText
                    android:id="@+id/visitor_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Engagement Context ID"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill"
                app:layout_row="9">

                <EditText
                    android:id="@+id/engagement_context_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/spinner_locale"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="center"
                app:layout_row="10" />

            <EditText
                android:id="@+id/language_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="language"
                android:inputType="textPersonName"
                app:layout_column="0"
                app:layout_gravity="center"
                app:layout_row="11" />

            <EditText
                android:id="@+id/country_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="region"
                android:inputType="textPersonName"
                app:layout_column="1"
                app:layout_gravity="center"
                app:layout_row="11" />

            <Button
                android:id="@+id/update_language_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Language"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_row="12" />

            <Button
                android:id="@+id/clear_locale_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_row="12" />

            <TextView
                android:id="@+id/date_sample_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_row="13"
                tools:text="April 01, 2020" />

            <TextView
                android:id="@+id/time_sample_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_row="13"
                tools:text="8:30:00 PM" />

        </androidx.gridlayout.widget.GridLayout>

        <CheckBox
            android:id="@+id/check_box_stepup_authen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_margin="10dp"
            android:text="Enable StepUp Authen" />

        <TextView
            android:id="@+id/sdk_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="10dp"
            android:text="VERSION" />

    </LinearLayout>
</ScrollView>
