<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/account_id_layout"
                    android:hint="Account ID:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/account_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/logout"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="logout"

                    />
            </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/auth_code_layout"
                    android:hint="Auth Code:"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/auth_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rowCount="10"
            app:columnCount="2"
            android:padding="10dp">

            <Button
                android:id="@+id/button_start_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/open_activity"
                app:layout_column="0"
                app:layout_row="0"
                app:layout_gravity="fill" />

            <Button
                android:id="@+id/button_start_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/open_fragment"
                app:layout_column="1"
                app:layout_row="0"
                app:layout_gravity="fill" />

            <CheckBox
                android:id="@+id/check_box_toasts"
                android:text="Show callbacks toasts"
                app:layout_column="0"
                app:layout_row="1"
                android:checked="false"
                android:gravity="center"

                />
            <CheckBox
                android:id="@+id/check_box_read_only"
                android:text="Read Only mode"
                app:layout_column="1"
                app:layout_row="1"
                android:checked="false"
                android:gravity="center"
                />



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/first_name_layout"
            android:hint="First Name:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="2"
            app:layout_columnSpan="2"
            app:layout_gravity="fill">

                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/last_name_layout"
                android:hint="Last Name:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_column="0"
                app:layout_row="3"
                app:layout_columnSpan="2"
                app:layout_gravity="fill">

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone_number_layout"
                android:hint="Phone Number:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_column="0"
                app:layout_row="4"
                app:layout_columnSpan="2"
                app:layout_gravity="fill">

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"/>

            </com.google.android.material.textfield.TextInputLayout>


            <Spinner
                android:id="@+id/spinner_locale"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:layout_column="0"
                app:layout_row="5"
                app:layout_columnSpan="2"
                app:layout_gravity="center"
                />


        <EditText
                android:id="@+id/language_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="language"
                android:inputType="textPersonName"
                app:layout_column="0"
                app:layout_row="6"
            app:layout_gravity="center"
            />


        <EditText
                android:id="@+id/country_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="region"
                android:inputType="textPersonName"
                app:layout_column="1"
                app:layout_row="6"
            app:layout_gravity="center"
            />


        <Button
                android:id="@+id/update_language_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Language"
                app:layout_column="0"
                app:layout_row="7"
                app:layout_gravity="fill"

            />

            <Button
                android:id="@+id/clear_locale_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                app:layout_column="1"
                app:layout_row="7"
                app:layout_gravity="fill"

                />


        <TextView
                android:id="@+id/date_sample_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_column="0"
                app:layout_row="8"
            app:layout_gravity="fill"

            />

            <TextView
                android:id="@+id/time_sample_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_column="1"
                app:layout_row="8"
                app:layout_gravity="fill"

                />
            <TextView
                android:id="@+id/sdk_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_row="9"
                app:layout_column="0"
                android:layout_margin="10dp"
                android:text="VERSION"
                app:layout_columnSpan="2"
                app:layout_gravity="center"/>
        </androidx.gridlayout.widget.GridLayout>



    </LinearLayout>
</ScrollView>
